@import 'nib/gradients'
@import 'nib/vendor'
/*@import 'nib/buttons'*/
vendor-prefixes = o ms moz webkit official

azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
    font-family: 'iconitos';
    src:url('../fonts/icomoon/icomoon.eot');
    src:url('../fonts/icomoon/icomoon.eot?#iefix') format('embedded-opentype'),
        url('../fonts/icomoon/icomoon.ttf') format('truetype'),
        url('../fonts/icomoon/icomoon.woff') format('woff'),
        url('../fonts/icomoon/icomoon.svg#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

a
    color naranja

body
    background #E8E8E8
    color gris_oscuro
    font-family Arial
    font-size 16px
    transition font-size 1s

footer
    background naranja
    color rgba(white,0.5)
    padding 1em 0
    text-align center
    width 100%

    h3
        font-size 14px
        font-weight normal

        strong
            display block

        .mejor
            &:before
            &:after
                content " - "

form
    padding 0.8em
    display none

    input
        margin-left 40px

header
    background gris_oscuro
    box-shadow 0 5px 0 rgba(0,0,0,0.2)
    color white
    overflow hidden
    padding 0.3em
    text-align center

    .logo
        border-right 1px solid azul
        display inline-block
        padding .3em
        img
            width 40px

    .titular
        display inline-block
        padding .3em

        .lin2
            display block
            text-align left

            .filtro
                color azul
                display inline-block
                font-size 14px
                font-style italic
                font-weight bold
                padding .3em 0
                text-decoration none


            .publicar
                background naranja
                color white
                display inline-block
                float right
                font-style italic
                padding .3em
                text-decoration none
                text-shadow 1px 1px 0px black

                &:before 
                    display inline-block
                    content "\e600"
                    font-family "iconitos"
                    margin 0 .3em 0 0

        .lin3
            text-align left
            .sizer 
                text-decoration none
            
        .titulo
            font-size 1em
            font-weight normal
            margin 0
            padding 0

    .usuario
        display inline-block
        padding .3em
        .avatar
            img
                width 40px
                border-radius 50%
        
        .flechita
            background naranja
            color white
            display inline-block
            float right
            margin -2.6em -.8em
            padding .3em
            text-align right
            text-decoration none
            width 2em

            &:after
                content "\e602"
                display inline-block
                font-family "iconitos"
                text-shadow 1px 1px 0px black

nav
    background azul
    border-left 15px solid white
    position relative

    &:before
        border-bottom 20px solid transparent
        border-left 7px solid white
        border-top 20px solid transparent
        content ""
        left 0
        position absolute
        top 0

    .menu
        height 40px
        line-height 40px
        margin 0
        padding 0
        overflow-x auto
        white-space nowrap
        li
            display inline-block
            a
                color white
                display block
                margin 0 0.5em
                padding 0 0.2em
                text-decoration none

.posts
    padding 0.5em

    .post 
        background white
        border-radius 0 0 0.5em 0.5em
        box-shadow 2px 2px 10px rgba(black, 0.5)
        color gris_texto
        margin-bottom 1em

        .acciones
            border-top 3px solid azul
            padding 0.5em
            overflow hidden

            .datos
                float right

                .comentarios
                    background gris_oscuro
                    border-radius 3px
                    color white
                    margin 0 1em 0 0
                    padding 2px 5px
                    text-decoration none

                .estrellita
                    text-decoration none

                    &:after
                        font-family "iconitos"
                        color #E0D561
                        content "\e601"

            .votos
                float left

                .down
                .up
                    text-decoration none

                .down
                    color red

                    &:before
                        font-family "iconitos"
                        font-size 1.5em
                        content "\e602"
                        vertical-align bottom

                .up
                    color green
                    &:before
                        font-family "iconitos"
                        font-size 1.5em
                        content "\e603"
                        vertical-align bottom

        .descripcion
            color gris_texto
            
            .detalles
                height 160px
                margin-left 130px

                .autor
                    margin 0.5em 0 2em 0

                .fecha
                    float right
                    margin 0 1em 0 0

                .tag
                    background azul
                    border-radius 0.5em
                    color white
                    padding 0.2em 0.5em
                    text-decoration none

                .titulo
                    color gris_oscuro
                    font-size 1.1em
                    font-style italic
                    margin 0
                    padding 0.5em 0.5em 0 0


            .imagen
                float left

                img
                    height 160px
                    vertical-align top
                    width 120px

